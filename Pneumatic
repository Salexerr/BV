void setup() {
  pinMode(13,INPUT);
  pinMode(2,OUTPUT);
}
void loop() {
  if(pulseIn(13,HIGH)>1000){
    delay(1000);
    if(pulseIn(13,HIGH)>1000){
      digitalWrite(2 , HIGH);
      delay(500);
      digitalWrite(2 , LOW);
      delay(500);
      digitalWrite(2 , HIGH);
      delay(500);
      digitalWrite(2 , LOW);
      delay(500);
    }
  }
  else
   {
     digitalWrite(2,LOW);
   }
}
